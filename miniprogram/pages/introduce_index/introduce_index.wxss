/* miniprogram/pages/introduce_index/introduce_index.wxss */
page{
  background-color: white;
}
.general_introduction{
  width: 90%;
  height: 300rpx;
  margin-left: 5%;
}
.general_introduction_img {
  width: 100%;
  height: 100%;
}
.logos {
  width: 90%;
  height: 180rpx;
  margin: 5%;
  display: flex;
  /*border: 4rpx solid #ffffff;*/
  flex-direction: row;
  justify-content: center;
   align-items: center;
  
}
.logo{
  width: 50%;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
   align-items: center;
}
.logo_img{
  width:120rpx ;
  height: 120rpx;
  margin-left: 15%;
  margin-right: 15%;
  border-radius: 50%;
}
.logo_text{
  font-size: 20 rpx;
  color:black;
}
.Recommendations_Bar{
  display: flex;
  font-size: 20px;
  color: black;
  background-color: white;
  width: 90%;
  margin: 5%;
  overflow-y: scroll;
  white-space: nowrap; 
}
.Recommendation{
  height: 100%;
  width: 100rpx;
  padding:25rpx;
  padding-top: 10rpx;
  padding-bottom: 10rpx;
}

.department_display{
  column-count: 2; 
  column-gap: 20rpx; 
  width: 90%;
  align-self: center;

}
.departments{
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
   align-items: center;
   -webkit-column-break-inside:avoid; /*避免元素被分割*/
   /*height: 100%;
   overflow: auto;*/
}
.department_img{
  width: 100%;
  
}
.tiltle_and_like{
  display: flex;
  flex-direction: row;
  align-items: center;
  
}
.department_title{
  font-size: 40rpx;
}
.like{
  height: 50rpx;
  width: 50rpx;
  margin-left: 40rpx;
}
.bottom_blank{
  width: 100%;
  height: 100px;
}
.bottom_tabbar{
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 48px;
  background: white;
  display: flex;
  padding-bottom: env(safe-area-inset-bottom);
}
.tab-bar-border {
  background-color: rgba(0, 0, 0, 0.33);
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 1px;
  transform: scaleY(0.5);
}
.bottom_tabbar_view {
  flex: 1;
  text-align: center;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
}
.bottom_tabbar_img{
  width: 27px;
  height: 27px;
}
