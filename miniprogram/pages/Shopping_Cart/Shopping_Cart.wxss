/* miniprogram/pages/Shopping_Cart/Shopping_Cart.wxss */
page{
  background-color: white;
}
.title{
  width: 100%;
  height: 70rpx;
  display: flex;
  flex-direction: row;
  padding-left: 5%;
  align-items: center;
  border: 2rpx solid #bbbbbb;
}
.title_img{
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
}
.title_text{
  font-size: 24rpx;
  
  margin-left: 40rpx;
}
.department{
  display: flex;
  flex-direction: row;
  width: 100%;
  height: 200rpx;
  align-items: center; 
  border: 2rpx solid #E5E5E5 ;
}
.checkboxs{
  margin: 50rpx;
}
checkbox .wx-checkbox-input{
  border-radius: 50%;/* 圆角 */
  width: 36rpx; /* 背景的宽 */
  height: 36rpx; /* 背景的高 */
  background-color: #f5f5f5;
  border: 1rpx solid rgb(122, 122, 122)
  }
  checkbox .wx-checkbox-input.wx-checkbox-input-checked{
    border: 1rpx solid ;
    background-color: black;
    }
    checkbox .wx-checkbox-input.wx-checkbox-input-checked::before{
      border-radius: 50%;
      width: 40rpx;/* 选中后对勾大小，不要超过背景的尺寸 */
      height: 40rpx;/* 选中后对勾大小，不要超过背景的尺寸 */
      line-height: 40rpx;
      text-align: center;
      font-size:30rpx; /* 对勾大小 30rpx */
      color:#fff; /* 对勾颜色 白色 */
      background: transparent;
      transform:translate(-50%, -50%) scale(1);  
      -webkit-transform:translate(-50%, -50%) scale(1);
      }
.department_img{
  width: 160rpx;
  height: 160rpx;
  border-radius: 20rpx;
}
.department_text{
  font-size: 40rpx;
  margin-left: 120rpx;
  font-weight: bold;
}
.tabbar_bottom{
  width: 100%;
  height: 140rpx;
  display: flex;
  flex-direction: row;
  position: fixed;
  background-color: #F8F8F8 ;
  align-items: center;
  bottom: 0;
  left: 0;
}
.bottom_radio{
  margin-left: 50rpx;
 
}
.selected_length{
  margin: 30rpx;
}
.submit{
  margin-left: 10%;
  width: 150rpx;
  height: 72rpx;
  border-radius: 30rpx;
  background-color: black;
  color: white;
  display: flex;
  align-items: center;
  justify-content: center;
  padding-left:10rpx ;
  padding-right: 10rpx;
  
}